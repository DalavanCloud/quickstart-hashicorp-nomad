    "Resources": {
        "HashiCorpConsulStack": {
            "DependsOn": "LinuxBastionHostStack",
            "Properties": {
                "Parameters": {
                    "AccessCIDR": {
                        "Ref": "AccessCIDR"
                    },
                    "AvailabilityZones": {
                        "Fn::Join": [
                            ",",
                            {
                                "Ref": "AvailabilityZones"
                            }
                        ]
                    },
                    "BastionSecurityGroupID": {
                        "Fn::GetAtt": [
                            "LinuxBastionHostStack",
                            "Outputs.BastionSecurityGroupID"
                        ]
                    },
                    "ConsulClientNodes": {
                        "Ref": "ConsulClientNodes"
                    },
                    "ConsulInstanceType": {
                        "Ref": "ConsulInstanceType"
                    },
                    "ConsulServerNodes": {
                        "Ref": "ConsulServerNodes"
                    },
                    "KeyPair": {
                        "Ref": "KeyPairName"
                    },
                    "PrivateSubnet1CIDR": {
                        "Ref": "PublicSubnet1CIDR"
                    },
                    "PrivateSubnet1ID": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.PrivateSubnet1AID"
                        ]
                    },
                    "PrivateSubnet2CIDR": {
                        "Ref": "PublicSubnet2CIDR"
                    },
                    "PrivateSubnet2ID": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.PrivateSubnet2AID"
                        ]
                    },
                    "PrivateSubnet3CIDR": {
                        "Ref": "PublicSubnet3CIDR"
                    },
                    "PrivateSubnet3ID": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.PrivateSubnet3AID"
                        ]
                    },
                    "PublicSubnet1CIDR": {
                        "Ref": "PublicSubnet1CIDR"
                    },
                    "PublicSubnet1ID": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.PublicSubnet1ID"
                        ]
                    },
                    "PublicSubnet2CIDR": {
                        "Ref": "PublicSubnet2CIDR"
                    },
                    "PublicSubnet2ID": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.PublicSubnet2ID"
                        ]
                    },
                    "PublicSubnet3CIDR": {
                        "Ref": "PublicSubnet3CIDR"
                    },
                    "PublicSubnet3ID": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.PublicSubnet3ID"
                        ]
                    },
                    "QuickStartS3URL": {
                        "Fn::Join": [
                            "/",
                            [
                                {
                                    "Fn::FindInMap": [
                                        "AWSInfoRegionMap",
                                        {
                                            "Ref": "AWS::Region"
                                        },
                                        "QuickStartS3URL"
                                    ]
                                }
                            ]
                        ]
                    },
		    "QSS3BucketName":
                            {
                                "Ref": "QSS3BucketName"
                            },
		    "QSS3KeyPrefix": {
		        "Fn::Join": [
			    "/",
			    [
			        { "Ref": "QSS3KeyPrefix" },
				"submodules/quickstart-hashicorp-consul"
			    ]
			]
		    },
                    "VPCCIDR": {
                        "Ref": "VPCCIDR"
                    },
                    "VPCID": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.VPCID"
                        ]
                    }
                },
                "TemplateURL": {
                    "Fn::Join": [
                        "/",
                        [
                            {
                                "Fn::FindInMap": [
                                    "AWSInfoRegionMap",
                                    {
                                        "Ref": "AWS::Region"
                                    },
                                    "QuickStartS3URL"
                                ]
                            },
                            {
                                "Ref": "QSS3BucketName"
                            },
                            {
                                "Ref": "QSS3KeyPrefix"
                            },
                            "submodules/quickstart-hashicorp-consul/templates/quickstart-hashicorp-consul.template"
                        ]
                    ]
                }
            },
            "Type": "AWS::CloudFormation::Stack"
        },
        "HashiCorpNomadStack": {
            "DependsOn": "HashiCorpConsulStack",
            "Properties": {
                "Parameters": {
                    "AccessCIDR": {
                        "Ref": "AccessCIDR"
                    },
